prefix=opt/vdr
set_confopt

var_append CXXFLAGS ' ' -Woverloaded-virtual

export VDRDIR="$root/$prefix"
export VDRINCDIR="$root$includedir/vdr"
export VDRPLUGINDB="$root$sysconfdir/plugins.d"
export VDRPLUGINDIR="$root$libdir/vdr"
export PLUGINDIR="$root$libdir/vdr/plugins"
export DVBINCDIR="$root/usr/include/linux/dvb"
export VIDEODIR="/video"
