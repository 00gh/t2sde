export GOCACHE=$builddir/gocache \
	GOENV=$builddir/goenv \
	GOPATH=$builddir/gopath \
	TMPDIR="$builddir/tmp"

go_prepare() {
	mkdir -p $GOCACHE $GOENV $GOPATH $TMPDIR
}

hook_add preconf 1 'go_prepare'
