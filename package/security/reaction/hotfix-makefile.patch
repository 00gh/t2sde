Add some standard Makefile variables to accomodate with the T2 build system.

  - NoTag <notag@t2sde.org>

--- reaction-v1.0.3/Makefile.vanilla	2024-01-06 18:10:25.619474728 +0100
+++ reaction-v1.0.3/Makefile	2024-01-06 18:12:39.371492464 +0100
@@ -1,10 +1,14 @@
+CC ?= gcc
+PREFIX ?= /usr/local
+BINDIR = $(PREFIX)/bin
+
 all: reaction ip46tables
 
 clean:
 	rm -f reaction ip46tables reaction.deb
 
 ip46tables: ip46tables.d/ip46tables.c
-	gcc -static ip46tables.d/ip46tables.c -o ip46tables
+	$(CC) -static ip46tables.d/ip46tables.c -o ip46tables
 
 reaction: app/* reaction.go go.mod go.sum
 	CGO_ENABLED=0 go build -buildvcs=false -ldflags "-X main.version=`git tag --sort=v:refname | tail -n1` -X main.commit=`git rev-parse --short HEAD`"
@@ -20,3 +24,7 @@
 	cd deb && dpkg-deb --root-owner-group --build reaction
 	mv deb/reaction.deb reaction.deb
 	rm -rf deb/
+
+install: all
+	@install -m755 reaction $(DESTDIR)$(BINDIR)
+	@install -m755 ip46tables $(DESTDIR)$(BINDIR)
