var_append makeopt ' ' "-C src GLOBALDIR=$root/$prefix/lib LIBS=-lncurses"
makeinstopt=

ne_install() {
	mkdir -p $root$mandir/man1 $root$infodir
	install -m 755 -o root -g root src/ne $root$bindir
	install -m 644 -o root -g root doc/ne.info* $root$infodir
	install -m 644 -o root -g root doc/ne.1 $root$mandir/man1
}
hook_add postmake 5 ne_install
